﻿@using Domain.Entities.User
@model IEnumerable<User>

@if (Model != null && Model.Any())
{
    <div class="container mt-5">
        @if (TempData["MessageSuccess"] != null)
        {
            <div class="alert alert-light text-success border-success rounded mt-5" role="alert">
                @TempData["MessageSuccess"]
            </div>
        }
        @if (TempData["MessageError"] != null)
        {
            <div class="alert alert-light text-danger border border-danger rounded mt-5" role="alert">
                @TempData["MessageError"]
            </div>
        }
        <h1 class="text-center pb-5">Usuários</h1>
        <div class="table-responsive">
            <table class="MyDataTables table table-white table-hover mt-5">
                <thead>
                    <tr>
                        <th scope="col">Nome da empresa</th>
                        <th scope="col">Email</th>
                        <th scope="col">Telefone</th>
                        <th scope="col">CNPJ</th>
                        <th scope="col">Cargo</th>
                        <th scope="col">Data de criação</th>
                        <th scope="col">Data de alteração</th>
                        <th></th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.BusinessName</td>
                            <td>@user.Email</td>
                            <td>@user.WhatsApp</td>
                            <td>@user.CnpjNumber</td>
                            <td>@user.Role</td>
                            <td>@user.CreatedAt</td>
                            <td>@user.UpdatedAt</td>

                            <td>
                                <form asp-controller="User" asp-action="Update" method="get">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-sm btn-warning m-2">Editar</button>
                                </form>
                            </td>
                            <td>
                                <form asp-controller="User" asp-action="Delete" method="get">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger m-2">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a  asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3 mx-2 ">Voltar</a>
        <a class="btn  btn-success mt-3 mx-2" asp-controller="User" asp-action="Create"> Cadastrar novo usuário</a>
    </div>

}
else
{
    <div class="pt-5"></div>
    <div class="pt-5"></div>
    <div class="pt-5"></div>
    <div class="d-flex justify-content-center">
        <a class="btn-lg btn-success mt-3 mx-2 text-center" asp-controller="User" asp-action="Create">Cadastrar novo usuário</a>
    </div>
}