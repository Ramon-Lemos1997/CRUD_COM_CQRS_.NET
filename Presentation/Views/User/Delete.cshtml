@model Domain.Models.UserModel

<div>
    <form class="p-2 mx-auto" asp-controller="User" asp-action="Delete" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-light text-danger border border-danger rounded mt-2" role="alert"></div>
        <h1 class="text-center pt-5">Excluir usuário</h1>

        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="container border rounded">
            <div class="row mt-3">
                <div class="col">
                    <label class="form-label" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" disabled />
                </div>
                <div class="col">
                    <label class="form-label" asp-for="BusinessName"></label>
                    <input asp-for="BusinessName" class="form-control" disabled />
                </div>
            </div>

            <div class="row mt-3">
                <div class="col">
                    <label class="form-label" asp-for="CnpjNumber"></label>
                    <input asp-for="CnpjNumber" class="form-control" disabled />
                </div>
                <div class="col">
                    <label class="form-label" asp-for="Role"></label>
                    <input asp-for="Role" class="form-control" disabled />
                </div>
            </div>

            <div class="row mt-3 ">
                <div class="col">
                    <label class="form-label" asp-for="WhatsApp"></label>
                    <input asp-for="WhatsApp" class="form-control" disabled />
                </div>
            </div>

            <a asp-controller="User" asp-action="Index" class="btn  btn-primary mt-3 m-2">Voltar</a>
            <button type="submit" class="btn  btn-danger mt-3 m-2">Excluir</button>
        </div>
    </form>
</div>
